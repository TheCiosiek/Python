def login_user():
    os.system('cls' if os.name == 'nt' else 'clear')
    login=input("Wprowadź login: ")
    password=input("Wprowadź hasło: ")
    if login in users:
        if users[login]==password:
            is_authenticated=True, login
    else:
        os.system('cls' if os.name == 'nt' else 'clear')
        print("Nieprawidłowy login lub hasło. Spróbuj jeszcze raz.")
    
